@model CIS4327_Bartender.Models.Cocktail.SearchCocktailModel

@{
    ViewData["Title"] = "Search";
}

<h1>Cocktail Search (@Model.Action)</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Cocktail" asp-action="SearchCocktail" asp-route-id="@Model.Action" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SearchId" class="control-label"></label>
                <input asp-for="SearchId" class="form-control" placeholder="Enter Id" value="" />
                <span asp-validation-for="SearchId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Index</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}